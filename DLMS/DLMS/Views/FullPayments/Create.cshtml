@model DLMS.Models.FullPayment

@{
    ViewBag.Title = "Payment";
}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <span class="login100-form-title p-b-26">
                        Enter Payment Details
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>

                    <div class=" validate-input">

                        Advance Token<br />
                        @Html.RadioButtonFor(model => model.downpayment, "50000", new { htmlAttributes = new { @class = "form-control" } })₹50,000&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.downpayment, "100000", new { htmlAttributes = new { @class = "form-control" } })₹1,00,000&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.downpayment, "150000", new { htmlAttributes = new { @class = "form-control" } })₹1,50,000
                        @Html.ValidationMessageFor(model => model.downpayment, "", new { @class = "text-danger" })

                    </div><br />
                        <div class="wrap-input100 validate-input">
                            @Html.TextBoxFor(model => model.user_address, new { placeholder = "Enter Your Address",htmlAttributes = new { @class = "input100" } })
                            @Html.ValidationMessageFor(model => model.user_address, "", new { @class = "text-danger" })
                        </div>
                        <div class="validate-input">
                            <center>
                                @Html.RadioButtonFor(model => model.mode, "Cash", new { htmlAttributes = new { @class = "form-control" } }) By Cash &nbsp;&nbsp;
                                @Html.RadioButtonFor(model => model.mode, "Cheque", new { htmlAttributes = new { @class = "form-control" } }) By Cheque
                                @Html.ValidationMessageFor(model => model.mode, "", new { @class = "text-danger" })
                            </center>
                        </div><br />
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Submit
                                </button>

                            </div>
                        </div>
                        }

                    </div>
            </div>
        </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
